<% provide(:title, @user.short_user_name) %>

<div class="panel panel-default">
	<div class="panel-heading"><%= t ".title" %></div>
	<div class="panel-body">
		<br>
		<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
			<div class="form-group">
				<%= f.label :first_name, class: "#{default_left_col_class} control-label" %>
				<div class="<%= default_right_col_class %>">
					<%= f.text_field :first_name, class: "form-control" %>
					<%= error_messages @user, :first_name %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :last_name, class: "#{default_left_col_class} control-label" %>
				<div class="<%= default_right_col_class %>">
					<%= f.text_field :last_name, class: "form-control" %>
					<%= error_messages @user, :last_name %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :email, class: "#{default_left_col_class} control-label" %>
				<div class="<%= default_right_col_class %>">
					<%= f.text_field :email, class: "form-control" %>
					<%= error_messages @user, :email %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :birth_date, class: "#{default_left_col_class} control-label" %>
				<div class="col-<%= default_grid_system %>-8">
					<%= f.date_select :birth_date, { start_year: User.not_younger.year, end_year: User.not_older.year, prompt: true }, class: "form-control date-select selectpicker" %>
					<%= error_messages @user, :birth_date %>
				</div>
			</div>
		    <div class="form-group">
				<%= f.label :gender, class: "#{default_left_col_class} control-label" %>
				<div class="<%= default_right_col_class %>">
					<label class="radio-inline">
						<%= f.radio_button :gender, :male %>
						<%= User.human_attribute_name("gender.male") %>
					</label>
					<label class="radio-inline">
						<%= f.radio_button :gender, :female %>
						<%= User.human_attribute_name("gender.female") %>
					</label>
					<label class="radio-inline">
						<%= f.radio_button :gender, :other %>
						<%= User.human_attribute_name("gender.other") %>
					</label>
					<br>
					<%= error_messages @user, :gender %>
				</div>
			</div>
			<hr>
		    <div class="form-group">
				<div class="<%= default_right_col_class %>">
					<%= f.submit nil, class: "btn btn-primary" %>
				</div>
			</div>
	    <% end %>
	</div>
</div>